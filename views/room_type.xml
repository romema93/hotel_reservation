<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_form_room_type" model="ir.ui.view">
            <field name="name">Room Type View Form</field>
            <field name="model">hotel_reservation.room_type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_room_type" model="ir.ui.view">
            <field name="name">Room Type Tree View</field>
            <field name="model">hotel_reservation.room_type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="action_room_type" model="ir.actions.act_window">
            <field name="name">Tipos de habitacion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel_reservation.room_type</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No existen registros, por favor crea uno nuevo
                </p>
            </field>
        </record>
        <menuitem id="menu_action_room_type" parent="hotel_reservation.menu_hotel_config"
                  action="hotel_reservation.action_room_type"/>
    </data>
</odoo>